---
import Prism from './Utility/Prism.astro'
---
<style global>

  section.hero {
    gap: var(--size-fluid-3) var(--size-10);

    & pre[class*="language-"] {
      box-shadow: var(--shadow-6);
      margin-block: 0;

      &:last-of-type {
        margin-block: var(--size-5) 0;
      }
    }

    @media (--lg-n-above) {
      column-gap: var(--size-12);    
    }
  }

  .hero > header {
    display: grid;
    gap: var(--size-5);
    grid-template-rows: auto 2fr auto;
    align-self: stretch;

    & .icon-quote {
      --_accent-1: var(--grape-5);
      --_accent-2: var(--grape-4);

      @nest [data-theme="light"] & {
        --_accent-1: var(--orange-7);
        --_accent-2: var(--orange-5);
        --_bg: var(--orange-0);
        --_ink: var(--orange-9);
      }
    }

    & small {
      color: var(--text-2);
      align-self: flex-end;
    }
  }

  .hero .subhead > h1 {
    overflow: clip;
    font-size: var(--font-size-5);

    @media (--xs-n-above) { font-size: var(--font-size-6) }
    @media (--sm-n-above) { font-size: var(--font-size-7) }
    @media (--md-n-above) { font-size: var(--font-size-fluid-3) }

    & > * {
      background: var(--gradient-1) fixed;
      background-size: 12ch 7ch;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;

      @nest [data-theme="dark"] & {
        background: var(--gradient-4) fixed;
        background-size: 12ch 7ch;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }
    }

    @media (--motionOK) {
      & > * {
        opacity: 0;
        animation: 
          var(--animation-fade-in) forwards,
          var(--animation-slide-in-up) forwards;
        animation-timing-function: var(--ease-out-5);
        animation-delay: .5s;
      }

      & > span {
        display: inline-block;
        animation-timing-function: var(--ease-out-5);
      }

      &:last-of-type > span:first-child {
        animation-delay: .6s;
      }

      &:last-of-type > span:last-child {
        animation-delay: .7s;
      }
    }
  }

</style>
<section class="hero block-wrap">
  <header>
    <div class="subhead">
      <h1><div>Supercharged</div></h1>
      <h1><span>CSS</span> <span>variables.</span></h1>
    </div>
    <ul class="checkmark-list">
      <li>
        <svg viewBox="0 0 24 24">
          <use href="#checkmark-icon"/>
        </svg>
        Expertly crafted web design tokens
      </li>
      <li>
        <svg viewBox="0 0 24 24">
          <use href="#checkmark-icon"/>
        </svg>
        Create consistent components
      </li>
      <li>
        <svg viewBox="0 0 24 24">
          <use href="#checkmark-icon"/>
